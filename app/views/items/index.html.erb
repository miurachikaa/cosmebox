<header>
  <h1 class = "rogo"><%= link_to "Cosme Box", root_path, class:"rogo"%></h1>
  <div class="search">
    <%= link_to  image_tag("searchicon.png", class:"searchicon"), search_users_path %>
  </div>
  <div class="user">
    <%= link_to  image_tag("usericon.png", class:"greeting"), user_path(id: current_user)%>
  </div>
</header>

<nav>
  <div class="dropdown">
    <a class="dropbtn">Base</a>
    <div class="dropdown_content">
      <%= link_to "Foundation", category_items_path(category_id:"2") %>
    <a div="nav_link">
      <%= link_to "Concealer", category_items_path(category_id:"3") %>
    </a>
    <a div="nav_link">
      <%= link_to "Powder", category_items_path(category_id:"4") %>
    </a>
    </div>
  </div>
  <div class="dropdown">
    <%= link_to "Eyebrow", category_items_path(category_id:"5"), class:"dropbtn" %>
  </div>
  <div class="dropdown">
    <a class="dropbtn">Eye</a>
    <div class="dropdown_content">
    <a div="nav_link">
      <%= link_to "Eyeliner", category_items_path(category_id:"6") %>
    </a>
    <a div="nav_link">
      <%= link_to "Eyeshadow", category_items_path(category_id:"7") %>
    </a>
    <a div="nav_link">
      <%= link_to "Mascara", category_items_path(category_id:"8") %>    
    </a>
    </div>
  </div>
  <div class="dropdown">
    <%= link_to "Lip", category_items_path(category_id:"9"), class:"dropbtn" %>
  </div>
  <div class="dropdown">
    <%= link_to "Cheek", category_items_path(category_id:"10"), class:"dropbtn" %>
  </div>
</nav>

<section>
  <span>
    <%= link_to "New Cosme + ",new_item_path, method: :get, class: 'btn'  %>
  </span>
  <div class="rank">
    <% @items.each do |item| %>
    <div class="products">
    <%= link_to item_path(item.id) do %>
      <div class="product">
        <%= image_tag "Perfume.png", class:"image" %>
          <div class="brand">
            <%= item.brand %>
          </div>
          <div class="name">
            <%= item.name %>
          </div>
      </div>
    <% end %>
    </div>
    <% end %>
  </div>
</section>



