<div class="rogoback">  
  <h1 class = "rogo"><%= link_to "Cosme Box", root_path, class:"rogo"%></h1>
</div>

<div class="pro">
  <div class="blok">
    <% if @item.category == @foundation %>
      <%= image_tag "foundation.png", class:"image" %>
    <% elsif @item.category == @concealer %>
      <%= image_tag "concealer.png", class:"image" %>
    <% elsif @item.category == @powder %>
      <%= image_tag "powder.png", class:"image" %>
    <% elsif @item.category == @eyebrow %>
      <%= image_tag "Perfume.png", class:"image" %>
    <% elsif @item.category == @eyeliner %>
      <%= image_tag "eyeliner.png", class:"image" %>
    <% elsif @item.category == @eyeshadow %>
      <%= image_tag "eyeshadow.png", class:"image" %>
    <% elsif @item.category == @mascara %>
      <%= image_tag "mascara.png", class:"image" %>
    <% elsif @item.category == @lip %>
      <%= image_tag "lip.png", class:"image" %>
    <% elsif @item.category == @cheek %>
      <%= image_tag "cheek.png", class:"image" %>
    <% end %>
    <div class="product-info">    
      <div class="brand">
        <%= @item.brand %>
      </div>
      <div class="name">
        <%= @item.name %>
      </div>
      <div class="border2"></div>
      <h5>Memo</h5><p>
      <div class="memo">
        <%= @item.memo %>
      </div>
    </div>

    <% if current_user.id == @item.user_id %>
    <div class="buttons">
      <button class="button2">      
        <strong>
          <%= link_to "edit", edit_item_path(@item.id), method: :get, class: "click"%>
        </strong>
      </button>      
      <button class="button2">
        <strong>
          <%= link_to "delete", item_path(@item.id), method: :delete, class: "click"%>
        </strong>
      </button>
    </div>
    <% else %>
    <div class="buttons">
      <button class="button4">      
        <strong>
          <%= link_to "user search", search_users_path, method: :get, class: "click"%>
        </strong>
      </button>      
    </div>
    <% end %>
  </div>
</div>


