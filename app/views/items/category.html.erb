<div class="rogoback">  
  <h1 class = "rogo"><%= link_to "Cosme Box", root_path, class:"rogo"%></h1>
</div>

<div class="category">
  <div class="rank">
    <% @items.each do |item| %>
      <div class="products">
        <%= link_to item_path(@items.ids) do %>
          <div class="product">
              <%= image_tag "Perfume.png", class:"image" %>
            <div class="brand">
              <%= item.brand %>
            </div>
            <div class="name">
              <%= item.name %>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

