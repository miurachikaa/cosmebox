<div class="rogoback">  
  <h1 class = "rogo"><%= link_to "Cosme Box", root_path, class:"rogo"%></h1>
</div>

<div class="probox2">
  <div class="blok2">
    <div class="product-info2">
      <h2 class = "salmonpink">Edit account</h2>    
      <div class="item-title">
        <h5>Nickname</h5><p>    
        <div class="user-nickname">
          <%= @user.nickname %>
        </div>
      </div>
      <div class="border3"></div>
      <div class="item-title">
        <h5>Age</h5><p>    
        <div class="user-age">
          <%= @user.age %>
        </div>
      </div>
      <div class="border3"></div>
      <div class="item-title">
        <h5>Skin type</h5><p>    
        <div class="user-skin-type">
          <%= @user.skin_type %>
        </div>
      </div>
      <div class="border3"></div>
      <div class="item-title">
        <h5>Personal color</h5><p>    
        <div class="user-personal-color">
          <%= @user.personal_color %>
        </div>
      </div>
      <div class="border3"></div>
      <div class="item-title">
        <h5>Face type</h5><p>    
        <div class="user-face-type">
          <%= @user.face_type %>
        </div>
      </div>
      <div class="border3"></div>
    </div>
    <% if current_user.id == @user.id %>
    <div class="buttons2">
      <button class="button3 submit2"><strong>
        <%= link_to "edit", edit_user_path(@user.id), method: :get, class: "click2"%>
      </strong></button>     
      <button class="button3 submit2"><strong>
        <%= link_to "logauto", destroy_user_session_path, method: :delete, class: "click2"%>
      </strong></button>
    </div>
    <% else %>
      <button class="button5"><strong>
        <%= link_to "user search", search_users_path, method: :get, class: "click2"%>
      </strong></button>     
    </div>
    <% end %>
  </div>
</div>

<div class="rank">
  <% @items.each do |item| %>
  <div class="products">
  <%= link_to item_path(item.id) do %>
    <div class="product">
      <% if item.category == @foundation %>
        <%= image_tag "foundation.png", class:"image" %>
      <% elsif item.category == @concealer %>
        <%= image_tag "concealer.png", class:"image" %>
      <% elsif item.category == @powder %>
        <%= image_tag "powder.png", class:"image" %>
      <% elsif item.category == @eyebrow %>
        <%= image_tag "eyebrow.png", class:"image" %>
      <% elsif item.category == @eyeliner %>
        <%= image_tag "eyeliner.png", class:"image" %>
      <% elsif item.category == @eyeshadow %>
        <%= image_tag "eyeshadow.png", class:"image" %>
      <% elsif item.category == @mascara %>
        <%= image_tag "mascara.png", class:"image" %>
      <% elsif item.category == @lip %>
        <%= image_tag "lip.png", class:"image" %>
      <% elsif item.category == @cheek %>
        <%= image_tag "cheek.png", class:"image" %>
      <% end %>
      <div class="brand">
        <%= item.brand %>
      </div>
      <div class="name">
        <%= item.name %>
      </div>
    </div>
  <% end %>
  </div>
  <% end %>
</div>
